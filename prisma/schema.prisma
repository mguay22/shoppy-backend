generator client {
  provider = "prisma-client"
  output        = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  products Product[]
}

model Product {
  id Int @default(autoincrement()) @id
  name String
  description String
  price Float
  user User @relation(fields: [userId], references: [id])
  userId Int
  sold Boolean @default(false)
}